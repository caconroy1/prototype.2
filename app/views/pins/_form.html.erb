<%= simple_form_for(@pin) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :approval_status %>
    <%= f.input :author %>
    <%= f.association :user %>
    <%= f.input :url %>
    <%= f.input :title %>
    <%= f.input :social_snippet %>
    <%= f.input :content_platform %>
    <%= f.input :content_type %>
    <%= f.input :description %>
    <%= f.input :author_notes %>
    <%= f.input :editor_notes %>
    <%= f.input :keyword_checklist %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

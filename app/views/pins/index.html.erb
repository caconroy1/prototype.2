<%- model_class = Pin -%>
<div class="page-header">
  <h1><%=t '.title', :default => Pin %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:approval_status) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:social_snippet) %></th>
      <th><%= model_class.human_attribute_name(:content_platform) %></th>
      <th><%= model_class.human_attribute_name(:content_type) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:author_notes) %></th>
      <th><%= model_class.human_attribute_name(:editor_notes) %></th>
      <th><%= model_class.human_attribute_name(:keyword_checklist) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.id %></td>
        <td><%= pin.approval_status %></td>
        <td><%= pin.author %></td>
        <td><%= pin.url %></td>
        <td><%= pin.title %></td>
        <td><%= pin.social_snippet %></td>
        <td><%= pin.content_platform %></td>
        <td><%= pin.content_type %></td>
        <td><%= pin.description %></td>
        <td><%= pin.author_notes %></td>
        <td><%= pin.editor_notes %></td>
        <td><%= pin.keyword_checklist %></td>
        <td><%= pin.image %></td>
        <td><%=l pin.created_at, format: :long %></td>
        <td>
          <%= link_to pin_path(pin), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to pin_path(pin), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pin_path,
            :class => 'btn btn-primary' %>

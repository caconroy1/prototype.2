<%- model_class = FacebookStatus -%>
<div class="page-header">
  <h1><%=t '.title', :default => FacebookStatus %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:approval_status) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:facebook_status) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:content_platform) %></th>
      <th><%= model_class.human_attribute_name(:content_type) %></th>
      <th><%= model_class.human_attribute_name(:author_notes) %></th>
      <th><%= model_class.human_attribute_name(:editor_notes) %></th>
      <th><%= model_class.human_attribute_name(:keyword_checklist) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @facebook_statuses.each do |facebook_status| %>
      <tr>
        <td><%= facebook_status.id %></td>
        <td><%= facebook_status.approval_status %></td>
        <td><%= facebook_status.title %></td>
        <td><%= facebook_status.facebook_status %></td>
        <td><%= facebook_status.author %></td>
        <td><%= facebook_status.content_platform %></td>
        <td><%= facebook_status.content_type %></td>
        <td><%= facebook_status.author_notes %></td>
        <td><%= facebook_status.editor_notes %></td>
        <td><%= facebook_status.keyword_checklist %></td>
        <td><%=l facebook_status.created_at, format: :long %></td>
        <td>
          <%= link_to facebook_status_path(facebook_status), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to facebook_status_path(facebook_status), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_facebook_status_path,
            :class => 'btn btn-primary' %>

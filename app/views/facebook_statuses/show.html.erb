<%- model_class = FacebookStatus -%>
<div class="page-header">
  <h1><%=t '.title', :default => FacebookStatus %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:approval_status) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.approval_status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:facebook_status) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.facebook_status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.author %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_platform) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.content_platform %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_type) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.content_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author_notes) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.author_notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:editor_notes) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.editor_notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:keyword_checklist) %></dt>
      <dd><pre class="prettyprint"><%= @facebook_status.keyword_checklist %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              facebook_statuses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_facebook_status_path(@facebook_status), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              facebook_status_path(@facebook_status),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


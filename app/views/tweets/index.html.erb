<%- model_class = Tweet -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tweet %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:tweet) %></th>
      <th><%= model_class.human_attribute_name(:approval_status) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:content_platform) %></th>
      <th><%= model_class.human_attribute_name(:content_type) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:author_notes) %></th>
      <th><%= model_class.human_attribute_name(:editor_notes) %></th>
      <th><%= model_class.human_attribute_name(:keyword_checklist) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.id %></td>
        <td><%= tweet.tweet %></td>
        <td><%= tweet.approval_status %></td>
        <td><%= tweet.title %></td>
        <td><%= tweet.author %></td>
        <td><%= tweet.content_platform %></td>
        <td><%= tweet.content_type %></td>
        <td><%= tweet.image %></td>
        <td><%= tweet.url %></td>
        <td><%= tweet.author_notes %></td>
        <td><%= tweet.editor_notes %></td>
        <td><%= tweet.keyword_checklist %></td>
        <td><%=l tweet.created_at, format: :long %></td>
        <td>
          <%= link_to tweet_path(tweet), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to tweet_path(tweet), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tweet_path,
            :class => 'btn btn-primary' %>

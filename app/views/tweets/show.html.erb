<%- model_class = Tweet -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tweet %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tweet) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.tweet %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:approval_status) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.approval_status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.author %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_platform) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.content_platform %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:content_type) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.content_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.image %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author_notes) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.author_notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:editor_notes) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.editor_notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:keyword_checklist) %></dt>
      <dd><pre class="prettyprint"><%= @tweet.keyword_checklist %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tweets_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tweet_path(@tweet), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tweet_path(@tweet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

